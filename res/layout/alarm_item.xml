<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="60dip"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="10dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/normal_edit_bg"
        android:orientation="horizontal"
        android:padding="10dip" >

        <TextView
            android:id="@+id/item_name"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:singleLine="true"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/time_ly"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/day_ly"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/remaining_day"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="天" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hour_ly"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/remaining_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="小时" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/minute_ly"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/remaining_minute"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="分" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/second_ly"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/remaining_second"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="秒" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>